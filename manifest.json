{
  "manifest_version": 3,
  "name": "Subscribr - YouTube Video Breakdown",
  "version": "1.0",
  "description": "Adds a Subscribr Video Breakdown button to YouTube video pages.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon48.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}